{
  "compilerOptions": {
    /* ===== Core Compilation ===== */
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    /* ===== Type Definitions ===== */
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    /* ===== Paths & Imports ===== */
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    /* ===== JS / Decorators ===== */
    "allowJs": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    /* ===== Strictness ===== */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  /* ===== Include / Exclude ===== */
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
